<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:background="@color/purple_background"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:maxLines="5"
        app:layout_constraintEnd_toStartOf="@id/iv_fraud"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/iv_fraud"
        android:layout_marginEnd="8dp"
        android:textSize="14sp"
        tools:text="Lorem ipsum dolor sit amet lorem ipsum dolor sit amet lorem ipsum dolor sit amet lorem lorem lorem lorem lorem lorem lroem lroem lorem lorem lorem lorem lorem lorem lorem lorem" />

    <ImageView
        android:id="@+id/iv_fraud"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:contentDescription="Fraud Photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_text"
        app:layout_constraintTop_toTopOf="@+id/tv_text"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_text"
        android:paddingTop="8dp"
        android:textStyle="bold"
        android:textSize="12sp"
        tools:text="DD MMMM YYYY" />

</androidx.constraintlayout.widget.ConstraintLayout>